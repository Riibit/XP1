<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.q_up.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txtview_title"
        android:layout_width="230dp"
        android:layout_height="58dp"
        android:text="Place Details"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/txtview_getlatitude"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="0dp"
        android:hint="Get Latitude"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtview_getlongtitude"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="0dp"
        android:hint="Get Longitude"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:text="Latitude"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="2dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="115dp"
        android:layout_height="37dp"
        android:text="Longitude"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />


</android.support.constraint.ConstraintLayout>