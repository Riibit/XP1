<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.q_up.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txtview_title"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:text="@string/placedetails"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/buttonlike"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="start|center_vertical"
        android:drawableBottom="@drawable/like"
        android:textAllCaps="false"
        android:layout_marginStart="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />
    <Button
        android:id="@+id/buttondislike"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="start|center_vertical"
        android:drawableBottom="@drawable/dislike"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

    <Button
        android:id="@+id/buttoninfo"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="start|center_vertical"
        android:drawableBottom="@drawable/info"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@+id/btn_qup"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="1.0" />


    <TextView
        android:id="@+id/txt_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dislike"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/buttondislike"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

    <TextView
        android:id="@+id/txt_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/like"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/buttonlike"
        android:layout_marginStart="12dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

    <ToggleButton
        android:id="@+id/btn_qup"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:textOff="@string/texton"
        android:textOn="@string/textoff"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="135dp" />

    <TextView
        android:id="@+id/txtView_numberqup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_qup" />


</android.support.constraint.ConstraintLayout>