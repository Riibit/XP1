<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sw2017.q_up.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/txtview_title"
        android:layout_width="378dp"
        android:layout_height="48dp"
        android:text="Place Details"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="6dp" />


    <Button
        android:id="@+id/buttonlike"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="left|center_vertical"
        android:drawableBottom="@drawable/like"
        android:textAllCaps="false"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />


    <Button
        android:id="@+id/buttondislike"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="76dp"
        android:layout_height="66dp"
        android:layout_gravity="left|center_vertical"
        android:drawableBottom="@drawable/dislike"
        android:textAllCaps="false"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

    <Button
        android:id="@+id/btn_qup"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Q UP!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="33dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txt_dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="27dp"
        android:text="Dislike"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/buttondislike"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />

    <TextView
        android:id="@+id/txt_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="29dp"
        android:text="Like"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/buttonlike"
        app:layout_constraintTop_toBottomOf="@+id/txtview_title" />


</android.support.constraint.ConstraintLayout>